<% content_for :javascript do %>
  <script type="text/javascript">
    ShopifyApp.ready(function(){
      ShopifyApp.Bar.initialize({ title: "History" });
    });
  </script>
<% end %>

<p id="notice"><%= notice %></p>

<%= link_to 'Settings', root_path %>

<h2>Histories</h2>

<table class="table">
  <thead>
    <tr>
      <th>No.</th>
      <th>Date</th>
      <th>Shipping address</th>
    </tr>
  </thead>

  <tbody>
    <% unless @histories.nil? %>
      <% @histories.each_with_index do |history, index| %>
        <tr>
          <th><%= index %></th>
          <th><%= history.created_at.to_date if history %></th>
          <td><%= history.shipping_address if history %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
