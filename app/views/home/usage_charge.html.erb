<% content_for :javascript do %>
  <script type="text/javascript">
    ShopifyApp.ready(function(){
      ShopifyApp.Bar.initialize({ title: "History" });
    });
  </script>
<% end %>

<p id="notice"><%= notice %></p>

<%= link_to '<< Settings', root_path %>

<h2>Daily Usage Charges</h2>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Price</th>
    </tr>
  </thead>

  <tbody>
    <% unless @usage_charge.nil? %>
      <% @usage_charge.each_with_index do |usage_charge, index| %>
        <tr>
          <th><%= index + 1 %></th>
          <td><%= usage_charge.price %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
